
<androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margins"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintVertical_chainStyle="spread">

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="@dimen/space_5x"
                        android:layout_height="@dimen/space_5x"
                        android:src="@drawable/ic_person_black_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/i2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="@dimen/space_5x"
                        android:layout_height="@dimen/space_5x"
                        android:src="@drawable/ic_meme_world"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/i1"
                        app:layout_constraintRight_toLeftOf="@+id/i3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="@dimen/space_5x"
                        android:layout_height="@dimen/space_5x"
                        android:src="@drawable/heart_on"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/i2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />
                </androidx.constraintlayout.widget.ConstraintLayout>
